{
  "name": "curio-garden",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:python": "npm-run-all --parallel dev:frontend-python dev:backend dev:tts-python",
    "dev:frontend": "next dev",
    "dev:frontend-python": "USE_PYTHON_TTS=true next dev",
    "dev:backend": "convex dev",
    "dev:tts-python": "${EDGE_TTS_PYTHON_PATH:-/tmp/edge-tts-venv/bin/python3} scripts/dev-tts.py",
    "local": "NEXT_PUBLIC_LOCAL_MODE=true next dev",
    "build": "bash scripts/build.sh",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "convex": "^1.32.0",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.58.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
